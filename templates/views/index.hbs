<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Header -->
    {{>headerLinks}}
</head>

<body>
    <!-- Navbar -->
    {{>navbar}}

    <!-- Main Header -->
    <div class="container-fluid main-header">
        <div class="col-12 col-md-10 mx-auto">
            <div class="row">
                <!-- left side div -->
                <div class="col-12 col-md-6 main-header-left">
                    <p>Welcome to weather app</p>
                    <h1>Get The Latest <span> Weather </span> Info Of Your City</h1>
                    <a href="/weather"><button>Check Now</button></a>
                </div>
                <!-- right side div -->
                <div class="col-12 col-md-6 main-header-right">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="./images/bg1.jpg" class="w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="./images/bg2.jpg" class="w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="./images/bg3.jpg" class="w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    {{>footer}}



    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>